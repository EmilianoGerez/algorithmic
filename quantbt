#!/usr/bin/env python3
"""
QuantBT CLI Entry Point

Launch the QuantBT Terminal User Interface (TUI).
"""

import sys
import os
from pathlib import Path

# Add the project root to Python path
project_root = Path(__file__).parent
sys.path.insert(0, str(project_root))

# Import and run the TUI
try:
    from tools.cli.quantbt_tui import main as tui_main
    if __name__ == "__main__":
        tui_main()
except ImportError as e:
    print(f"‚ùå Error importing QuantBT TUI: {e}")
    print("Please ensure you're in the project root directory.")
    sys.exit(1)
